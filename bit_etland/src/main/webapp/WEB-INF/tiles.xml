<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

  <definition name="public" template="/WEB-INF/views/layouts/home.jsp">
    <put-attribute name="head" value="/WEB-INF/views/customer/head.jsp" />
    <put-attribute name="navi" value="/WEB-INF/views/customer/navi.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/customer/footer.jsp" />
    <put-attribute name="content" value="" />
    <put-attribute name="bottom" value="/WEB-INF/views/home/bottom.jsp" />    
  </definition>
  <definition name="public:*/*.tiles" extends="public">
    <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
  </definition>
  
  <definition name="customer" template="/WEB-INF/views/layouts/customer.jsp">
    <put-attribute name="head2" value="/WEB-INF/views/customer/head.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/customer/body.jsp" />
    <put-attribute name="content" value="" />
  </definition>
  <definition name="customer:*/*.tiles" extends="customer">
    <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
  </definition>
  
</tiles-definitions>